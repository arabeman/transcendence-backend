{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"],

    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "sourceMap": true,
    "declaration": false,
    "ignoreDeprecations": "6.0",
    "baseUrl": ".",
    "paths": {
      "@schemas/*": ["src/schemas/*"],
      "@entities/*": ["src/entities/*"],
      "@services/*": ["src/services/*"],
      "@routes/*": ["src/routes/*"],
      "@config/*": ["src/config/*"]
    }
  },
  "ts-node": {
    "files": true,
    "transpileOnly": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
